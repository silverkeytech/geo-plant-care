@page
@model UpdatePlantModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sofia+Sans:wght@700&family=Roboto&display=swap" rel="stylesheet">

    <style>

        .half {
            height: 100vh; /* vh is view height, 100vh is 100% of the view height */
        }
        .green {
            border-top-right-radius: 60px;
            border-bottom-right-radius: 60px;
            background-color: #dff2ea;
        }
        .white {
            background-color: white;
            border-radius: 60px;  
        }
        .labelfont{
            font-size: 18px;
            font-weight: 600;
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    <div class="row no-gutters">
        <div class="col half green d-flex justify-content-center align-items-center">
            <img src="~/icons/plantpot.png" alt="plantpot" style="height:100%; margin-bottom: -100px;"/>

        </div>
        <div class="col-6 half white d-flex justify-content-center align-items-center">
            <form style="width: 50%;">
                <h2 class="text-center mb-4" style="font-family:'Roboto', sans-serif; font-weight:800; font-size:48px;">Sign Up</h2>
                <div class="form-group">
                    <label for="username" class="labelfont">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="firstName" class="labelfont">First Name</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Enter first name">
                </div>
                <div class="form-group">
                    <label for="lastName" class="labelfont">Last Name</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Enter last name">
                </div>
                <div class="form-group">
                    <label for="email" class="labelfont">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password" class="labelfont">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter password">
                </div>
                <button type="submit" class="btn" style="background-color: #588470; color:white; font-weight:500; font-family: 'Sofia Sans', sans-serif; font-size:24px; border-radius:50px; height:50px; width:130px; margin-top:30px;">Sign Up</button>
                <p class="mt-3">Already have an account? <a href="signin" style="color: #d78d56; font-size:16px;">Sign In</a></p>
            </form>
        </div>
</body>
</html>
